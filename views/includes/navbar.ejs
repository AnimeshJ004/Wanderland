<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchContainer = document.querySelector('.search-container');
    const searchToggle = document.querySelector('.search-toggle');
    const searchInput = document.querySelector('.search-input');

    if (searchToggle && searchInput && searchContainer) {
        // Submit search form on search button click only if input has value
        searchToggle.addEventListener('click', function() {
            if (searchInput.value.trim() !== '') {
                searchContainer.submit();
            }
        });

        // Submit form when Enter is pressed in search input only if input has value
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                if (searchInput.value.trim() !== '') {
                    searchContainer.submit();
                }
            }
        });
    }

    // Handle mobile search dropdown
    const mobileSearchForm = document.querySelector('#searchDropdown form');
    const mobileSearchInput = mobileSearchForm ? mobileSearchForm.querySelector('input[name="search"]') : null;
    const mobileSearchButton = mobileSearchForm ? mobileSearchForm.querySelector('button') : null;

    if (mobileSearchButton && mobileSearchInput) {
        mobileSearchButton.addEventListener('click', function(e) {
            if (mobileSearchInput.value.trim() === '') {
                e.preventDefault();
            }
        });

        mobileSearchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                if (mobileSearchInput.value.trim() !== '') {
                    mobileSearchForm.submit();
                }
            }
        });
    }
});
</script>


