<%-layout("/layouts/boilerplate")%>
   <div class="row mt-3 mb-4">
    <div class="col-10 offset-1">
    
<h1 class="show-title"><%= listing.title %></h1>
    <div class="card show-card listing-card">
          <img src="<%= listing.image.url %>" alt="listing_image" class="card-img-top show-img">
          <div class="card-body show-card-body">
              <p class="card-text show-details">
                <i class="show-owner"><b>Owned by: <%= listing.owner.username %></b></i>
                <br><br>
                <span class="show-description"><%= listing.description %></span><br>
                <span class="show-price">&#8377; <%= listing.price.toLocaleString("en-IN") %></span><br>
                <span class="show-location"><i class="fas fa-map-marker-alt"></i> <%= listing.location %>, <%= listing.country %></span>
              </p>
          </div>
    </div>
    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
    <div class="btns-show mb-4">
      <a href="/listings/<%=listing._id%>/edit" class="btn btn-primary edit-btn">Edit</a>
      <form method="POST" action="/listings/<%=listing._id%>?_method=Delete" class="d-inline">
          <button class="btn btn-danger edit-btn-delete">Delete</button>
       </form>
    </div>
    <% } %>
    <div>
      <% if(currentUser) { %>
        <hr class="review-divider"/>
      <h4 class="review-title">Leave a Review</h4>
      <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation review-form mb-4" >
      <div class="mb-3">
        <label for="rating" class="form-label review-label">Rating</label>
          <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label review-label">Comments</label>
          <textarea id="comment" name="review[comment]" rows="5" cols="30" class="form-control review-textarea" required></textarea>
        <div class="invalid-feedback">
          Please enter your comments.
        </div>
        </div>
        <button class="btn btn-outline-dark review-submit-btn">Submit Review</button>
      </form>
       <% } %>
      <hr class="review-divider"/>
      <h4 class="reviews-title">All Reviews</h4>
      <div class="row reviews-container">
        <% for(let rev of listing.reviews){ %>
          <div class="card review-card col-5 ms-3 mb-3">
            <div class="card-body review-card-body">
              <h6 class="card-title review-author">@<%= rev.author.username %></h6>
              <p class="starability-result review-rating" data-rating="<%= rev.rating %>"></p>
              <p class="card-text review-comment"><%= rev.comment %></p>
               <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=rev._id%>?_method=DELETE" class="review-delete-form">
                <button class="btn btn-outline-dark btn-sm dlt-btn"><i class="fa-solid fa-trash"></i></button>
               </form>
            </div>
          </div>
        <% } %>
        </div>
    </div>
    </div>
