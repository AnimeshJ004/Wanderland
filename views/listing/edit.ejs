<%- layout("/layouts/boilerplate") %>
<div class="row mt-3 mb-4">
    <div class="col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
                <h3 class="mb-0 fw-bold">Edit Listing</h3>
            </div>
            <div class="card-body p-4">
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="title" class="form-label fw-semibold">Title</label>
                        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control form-control-lg" required>
                        <div class="invalid-feedback">Title Should be Valid!</div>
                        <div class="valid-feedback">Title looks Good</div>
                    </div>

                    <div class="mb-4">
                        <label for="description" class="form-label fw-semibold">Description</label>
                        <textarea name="listing[description]" class="form-control form-control-lg" rows="4" required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Description Should be Valid!</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Current Image</label>
                        <div class="text-center">
                            <img src="<%= originalimageurl %>" class="img-fluid rounded-3 shadow-sm" style="max-height: 300px; width: auto;" alt="Current Image" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="Image" class="form-label fw-semibold">Upload New Image</label>
                        <input name="listing[image]" value="<%= listing.image.url %>" type="file" class="form-control form-control-lg">
                    </div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="Price" class="form-label fw-semibold">Price</label>
                            <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control form-control-lg" required>
                            <div class="invalid-feedback">Price Should be Valid!</div>
                        </div>

                        <div class="col-md-8">
                            <label for="Location" class="form-label fw-semibold">Location</label>
                            <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control form-control-lg" required>
                            <div class="invalid-feedback">Location Should be Valid!</div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="Country" class="form-label fw-semibold">Country</label>
                        <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control form-control-lg" required>
                        <div class="invalid-feedback">Country Should be Valid!</div>
                    </div>

                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg mt-3 mb-3 fw-bold shadow-sm" type="submit">Update Listing</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
