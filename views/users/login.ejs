<%- layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-10 offset-1 login-title">Login on WanderLand</h2>
    <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-10 offset-1 login-container">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="password" name="password" required>
                    <button class="btn btn-outline-secondary toggle-password" type="button">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
            </div>
            <button type="submit" class="btn btn-primary sign-btn">Login</button>
        </form>
    </div>
</div>
<p class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-10 offset-1 mb-3 mt-3 login-link">Don't have an account? <a href="/signup">Sign Up</a></p>
